generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}
 
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  password      String?   @unique
  image         String?
 
  @@map("users")
  kelas         Kelas[]
}

model Kelas {
  id            String  @id @default(cuid())
  userId        String
  name          String
  background    String
  totalStudents Int
  teacherName   String

  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
